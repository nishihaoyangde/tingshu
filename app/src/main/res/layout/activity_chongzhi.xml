<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF3030"
        android:id="@+id/chongzhiRelalayout1"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/chongzhiImagebt"
            android:background="@mipmap/back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:text="充值"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zhongzhiTV1"
            android:layout_centerHorizontal="true"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/chong"/>
           <TextView
               android:paddingLeft="5dp"
               android:textColor="#fff"
               android:textSize="20dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="记录"
               android:onClick="chongzhi"/>
       </LinearLayout>
    </RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#ededed"
      android:id="@+id/chongzhiLinearLayout1"
      android:layout_below="@+id/chongzhiRelalayout1"
      android:orientation="horizontal"
      android:padding="10dp">

      <TextView
          android:paddingLeft="10dp"
          android:layout_weight="3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="充值信息"
          />
   <TextView
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="1元=1000个传奇币"
       android:textColor="#ff3030"/>
  </LinearLayout>
    <LinearLayout

       android:paddingLeft="10dp"
        android:layout_below="@+id/chongzhiLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:id="@+id/chongzhiLinearLayout2">
        <TextView
            android:paddingLeft="10dp"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chongzhiTV1"
            android:text="充值金额："
            />
        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chongzhiTV2"
            android:hint="输入充值金额"
            android:textSize="15dp"
            android:drawableRight="@mipmap/yuan"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/chongzhiLinearLayout3"
        android:background="#fff"
      android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chongzhiLinearLayout2"
        android:orientation="horizontal">
        <TextView
         android:paddingLeft="10dp"

            android:text="传奇币余额："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/chongzhiyueu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="传奇币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/chongzhiLinearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chongzhiLinearLayout3"
        android:background="#fff"
        android:paddingLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:paddingLeft="10dp"
            android:text="充值后传奇币余额："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="#ff3030"
            android:textColorHint="#ff3030"
            android:hint="0"
            android:paddingLeft="20dp"
            android:id="@+id/chongzhiyueu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="传奇币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LinearLayout5"
        android:background="#ededed"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chongzhiLinearLayout4">
     <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="支付方式"
    android:padding="10dp"
    />
    </LinearLayout>
    <RelativeLayout
        android:paddingLeft="20dp"
        android:layout_below="@+id/LinearLayout5"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/chongzhiImagebt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/zhifubao"/>
       <TextView
           android:id="@+id/chongzhiTV3"
           android:paddingLeft="10dp"
           android:layout_centerInParent="true"
           android:text="支付宝快捷支付"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/chongzhiImagebt1"
           />
        <RadioButton
            android:paddingRight="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:drawableLeft="@mipmap/yuanquan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:onClick="chongzhi"
        android:id="@+id/chongzhiBt"
        android:text="立即充值"
        android:background="#008b45"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"/>

</RelativeLayout>