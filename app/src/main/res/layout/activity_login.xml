<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:background="#FF3030"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/imageButton"
            android:background="@mipmap/back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:text="用户登录"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logintv1"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="注册"
            android:textSize="25dp"
            android:paddingRight="10dp"
            android:textColor="#fff"
            android:id="@+id/logintv2"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:id="@+id/myprofileloginnumer"
            android:drawableLeft="@mipmap/profiletou"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入密码"
            android:id="@+id/myprofileloginpassword"
            android:drawableLeft="@mipmap/suo"
            android:layout_marginTop="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:background="#ff6600"
            android:onClick="login"
            android:layout_marginTop="10dp"
            android:id="@+id/loginbt1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:gravity="center"
            android:onClick="Forgotpassword "
            android:layout_marginTop="10dp"
            android:id="@+id/logintv3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  QQ账号登陆"
            android:drawableLeft="@mipmap/qq"
            android:paddingLeft="10dp"
            android:gravity="fill_vertical"
            android:drawableRight="@mipmap/more"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 微信账号登陆"
            android:drawableLeft="@mipmap/wx"
            android:paddingLeft="10dp"
            android:gravity="fill_vertical"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/more"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  新浪微博登陆"
            android:drawableLeft="@mipmap/sina"
            android:paddingLeft="10dp"
            android:gravity="fill_vertical"
            android:drawableRight="@mipmap/more"/>
    </LinearLayout>
</RelativeLayout>