<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF3030"
        android:id="@+id/relativelayout1"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/imageButton2"
            android:background="@mipmap/back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:text="注册"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registeredtv1"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="登录"
            android:textSize="25dp"
            android:paddingRight="10dp"
            android:textColor="#fff"
            android:id="@+id/registeredtv2"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="为确保您的账户安全,请填写您本人的真实手机号注册,该号码仅作为登陆和找回密码使用。"
            android:background="#bfbfbf"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/phone"
        android:hint="请输入真实的手机号码"
        android:gravity="fill_vertical"
        android:paddingTop="10dp"
        android:id="@+id/registeredet1"
        android:background="#fff"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/registeredet1"
            android:paddingTop="10dp"
            android:id="@+id/registeredlayout1">
        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/yanzhengma"
            android:hint="验证码"
            android:paddingTop="10dp"
            android:background="#fff"
            android:id="@+id/registeredet2"
            android:layout_marginRight="10dp"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/registeredbt1"
                android:text="获取验证码"
                android:background="#ff6600"
                />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/jiesuo"
            android:hint="输入密码"
            android:gravity="fill_vertical"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:id="@+id/registeredet4"
            android:background="#fff"
            android:layout_below="@id/registeredlayout1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/jiesuo"
            android:hint="再次输入密码"
            android:gravity="fill_vertical"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/registeredet5"
            android:background="#fff"
            android:layout_below="@id/registeredet4"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registeredet5"
            android:text="注册"
            android:background="#008b45"
            android:layout_marginTop="10dp"
            android:id="@+id/registeredbt2"
            android:onClick="zhuche"
            />
    </RelativeLayout>

</RelativeLayout>